@model WebAppHomeWork.ViewModel.LogInViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/Myjquery")

</head>
<body>
<div class="col-md-offset-4">
    @using (Html.BeginForm("LogIn", "Authentication", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <h4>登录</h4>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", required = true, maxlength = 50, placeholder = "用户名" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", required = true, type = "password", maxlength = 50, placeholder = "密码" } })
                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    @Model.ErrorMsg
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="登录" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>
</body>
</html>
